// calculating the sum of all the even values from 1 to n 


#include <iostream>
using namespace std;
int main()
{
    int n,i;
    int sum = 1;

    cout << "enter the number  of the n ";
    cin >> n;

    for (i=1; i<=n; i++)
    {
        
        sum *= i;
    }

// //     cout << "enter the number  = ";
// //     cin >> a;

// //     while(i = 0; i <= a ; i++ )
// //     {
// //         sum += i;
// //     }
// //     break;
    
   cout << "sum = " << sum << endl; 
   return 0;
}


